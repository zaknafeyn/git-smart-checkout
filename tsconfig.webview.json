{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist/webview",
    "rootDir": "src/webview",
    "typeRoots": ["node_modules/@types", "src/webview/types"],
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/@types/*", "src/webview/types/*"]
    },
    "composite": true
  },
  "include": [
    "src/webview/**/*",
    "src/webview/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "out"
  ]
}