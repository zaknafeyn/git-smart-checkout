{
  "name": "git-smart-checkout",
  "author": "Valentyn Radchuk <zaknafeyn@gmail.com>",
  "displayName": "Git smart checkout",
  "description": "Git checkout with automatic stash",
  "publisher": "vradchuk",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zaknafeyn/git-smart-checkout"
  },
  "homepage": "https://github.com/zaknafeyn/git-smart-checkout/blob/master/README.md",
  "keywords": [
    "git",
    "checkout",
    "stash",
    "auto stash"
  ],
  "license": "MIT",
  "version": "0.0.1",
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:.git"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "git-smart-checkout",
          "title": "Git Smart Checkout",
          "icon": "resources/dark/clone.svg"
        }
      ]
    },
    "views": {
      "git-smart-checkout": [
        {
          "id": "git-smart-checkout.prClone",
          "name": "PR Clone",
          "type": "webview",
          "icon": "$(git-pull-request)",
          "when": "git-smart-checkout.showPrClone"
        },
        {
          "id": "git-smart-checkout.prCommits", 
          "name": "Commits to Cherry-pick",
          "type": "tree",
          "icon": "$(git-commit)",
          "when": "git-smart-checkout.showPrCommits"
        }
      ]
    },
    "commands": [
      {
        "command": "git-smart-checkout.checkoutTo",
        "title": "Checkout to... (With Stash)",
        "category": "Git"
      },
      {
        "command": "git-smart-checkout.pullWithStash",
        "title": "Pull (With Stash)",
        "category": "Git"
      },
      {
        "command": "git-smart-checkout.switchMode",
        "title": "Switch Mode",
        "category": "Git"
      },
      {
        "command": "git-smart-checkout.clonePullRequest",
        "title": "Clone pull request...",
        "category": "Git",
        "icon": {
          "light": "resources/light/clone.svg",
          "dark": "resources/dark/clone.svg"
        }
      },
      {
        "command": "git-smart-checkout.toggleCommit",
        "title": "Toggle Commit Selection",
        "category": "Git"
      },
      {
        "command": "git-smart-checkout.copyCommitsToClipboard",
        "title": "Copy Commits to Clipboard",
        "category": "Git",
        "icon": "$(copy)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "git-smart-checkout.checkoutTo"
        },
        {
          "command": "git-smart-checkout.pullWithStash"
        },
        {
          "command": "git-smart-checkout.clonePullRequest"
        }
      ],
      "view/title": [
        {
          "command": "git-smart-checkout.copyCommitsToClipboard",
          "when": "view == git-smart-checkout.prCommits",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "git-smart-checkout.toggleCommit",
          "when": "view == git-smart-checkout.prCommits && viewItem == commit"
        }
      ]
    },
    "configuration": {
      "title": "Git Smart Checkout Settings",
      "properties": {
        "git-smart-checkout.mode": {
          "type": "string",
          "enum": [
            "manual",
            "autoStashForBranch",
            "autoStashAndPop",
            "autoStashAndApply"
          ],
          "markdownEnumDescriptions": [
            "Select mode manually at checkout",
            "Auto stash in current branch",
            "Auto stash and pop in new branch",
            "Auto stash and apply in new branch"
          ],
          "default": "manual",
          "description": "Checkout stash mode"
        },
        "git-smart-checkout.logging.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable logging output"
        },
        "git-smart-checkout.refetchBeforeCheckout": {
          "type": "boolean",
          "default": false,
          "description": "Refetch remotes each time before checkout"
        },
        "git-smart-checkout.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show or hide the extension's status bar item"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn package",
    "compile": "yarn check-types && yarn lint && node esbuild.mjs",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.mjs --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "yarn check-types && yarn lint && node esbuild.mjs --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn compile-tests && yarn compile && yarn lint",
    "check-types": "tsc --noEmit",
    "check-types-webview": "tsc --noEmit --project tsconfig.webview.json",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "build-vsix": "yarn package && vsce package --yarn",
    "build-vsix-dev": "yarn compile && vsce package --yarn --no-dependencies",
    "publish": "yarn package && vsce publish --yarn",
    "build-webview": "webpack --mode production --config webpack.webview.config.js",
    "watch-webview": "webpack --mode development --config webpack.webview.config.js --watch",
    "serve-webview": "webpack serve --mode development --config webpack.webview.config.js",
    "dev": "npm-run-all -p watch:esbuild serve-webview",
    "build-all": "yarn check-types-webview && yarn build-webview && yarn package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^7.14.1",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "@vscode/vsce": "^2.15.0",
    "css-loader": "^6.8.1",
    "esbuild": "^0.21.5",
    "eslint": "^9.25.1",
    "glob": "^8.0.3",
    "html-webpack-plugin": "^5.5.3",
    "mini-css-extract-plugin": "^2.7.6",
    "mocha": "^10.1.0",
    "npm-run-all": "^4.1.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.4.4",
    "typescript": "^5.4.5",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "classnames": "^2.5.1",
    "date-fns": "^4.1.0"
  }
}
